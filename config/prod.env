# Configurações de Produção - Sabores Conectados
# IMPORTANTE: Altere todas as senhas e secrets antes de usar em produção!

# Docker Registry
DOCKER_USERNAME=saboresconectados
VERSION=latest

# Database
MYSQL_ROOT_PASSWORD=CHANGE_ME_SECURE_PASSWORD
MYSQL_DATABASE=sabores_conectados_prod

# JWT
JWT_SECRET=CHANGE_ME_JWT_SECRET_KEY_AT_LEAST_256_BITS
JWT_EXPIRATION=86400000

# Monitoring
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
PROMETHEUS_RETENTION_TIME=30d

# Logging
ELASTICSEARCH_PASSWORD=CHANGE_ME_ELASTICSEARCH_PASSWORD
KIBANA_PASSWORD=CHANGE_ME_KIBANA_PASSWORD

# External Services (futuro)
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
RABBITMQ_PASSWORD=CHANGE_ME_RABBITMQ_PASSWORD

# SSL/TLS (futuro)
SSL_CERT_PATH=/etc/ssl/certs/sabores-conectados.crt
SSL_KEY_PATH=/etc/ssl/private/sabores-conectados.key
